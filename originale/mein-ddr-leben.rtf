\par \pard\plain \ltrpar\s1{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\aspalpha\ql\rtlch\af7\afs13\lang255\ltrch\dbch\af7\langfe255\hich\f2\fs12\lang1031\loch\f2\fs12\lang1031 
