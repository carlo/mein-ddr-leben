\par \pard\plain \ltrpar\s1\cf0{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\aspalpha\ql\rtlch\af7\afs24\lang255\ltrch\dbch\af7\langfe255\hich\f1\fs22\lang1031\loch\f1\fs22\lang1031 {\rtlch \ltrch\loch\f2\fs24\lang1031\i0\b0 3 Pfennige und als dichtes Winterfell 50 Pfennige. }
\par \pard\plain \ltrpar\s1\cf0{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\aspalpha\ql\rtlch\af7\afs24\lang255\ltrch\dbch\af7\langfe255\hich\f1\fs22\lang1031\loch\f1\fs22\lang1031 {\rtlch \ltrch\loch\f2\fs24\lang1031\i0\b0 Lohnenswerter waren Kaninchenfelle, wurden besser bezahlt. Die brachten zwischen 1 und 2 Mark. Zus\u228\'3ftzlich gab es f\u252\'3fr die Kaninchenfelle Bezugsscheine f\u252\'3fr K\u246\'3frnerfutter. Auch das war ja damals streng kontingentiert.}
\par \pard\plain \ltrpar\s1{\*\hyphen2\hyphlead2\hyphtrail2\hyphmax0}\aspalpha\ql\rtlch\af7\afs13\lang255\ltrch\dbch\af7\langfe255\hich\f2\fs12\lang1031\loch\f2\fs12\lang1031 
